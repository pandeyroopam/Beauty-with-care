<% layout("/layouts/boilerplate")%>

<div class="show-container">

    <div class="inner-cont">
    <div class="show-btn">
        <div>
            <a href="/home/<%=blog._id%>/edit">
                    <i class="fa-regular fa-pen-to-square" style="color: grey;"></i>
            </a>            
        </div>
        <div>
            <form action="/home/blog/<%=blog._id%>?_method=DELETE" method="POST">
            <button class="btn"><i class="fa-solid fa-trash-can"></i></button>
            </form>
        </div>
    </div>
       <br>
    <div class="show-title">
       <h2><%- blog.title %></h2>
    </div>
     <br>
    <div class="show-Image">
        <img src="<%- blog.image %>" class="card-img-top show-img">
    </div>
      <br>
    <div class="show-content">
        <p><%-blog.content %></p>
    </div>
      <br><br>
      <hr>

     <div class="review-form">
        <h3>Leave a Review</h3>
        <form action="/home/blog/<%=blog._id%>/reviews" method="POST">
            <div class="rating">
              <label for="">Rating</label>
              <input type="range" min="1" max="5" name="review[rating]">
            </div>
            <div>
                <label for="">comment</label>
                <textarea name="review[comment]" rows="5" placeholder="Write your comment here..." required></textarea>
            </div>
            <button type="submit">Submit</button>
          </form>
           <br>
          <hr>
          <div class="review-list" id="reviewList">
            <h3 style="    margin-bottom: 20px;">All Reviews</h3>
            <!-- Individual reviews will be displayed here -->
             <div class="review-box">
             <% for(review of blog.reviews){ %>
            <div class="review-item">
                <h4>John Doe</h4>
                <p>Rating: 
                    <% for( i = 0; i < review.rating; i++){ %>
                    
                    <span>‚≠ê</span>
                    <% } %>
                </p>
                <p><%= review.comment %></p>
            </div>
            <% } %>
        </div>

        </div>
     </div>
    </div>
</div>