<link rel="stylesheet" href="/css/blog.css">
<% layout("/layouts/boilerplate")%>
<div class="box">
<div class="listings">
   <div class="heading">
    <h1>Blog Section</h1>
    <form method="GET" action="/home/Editor">
        <button class="btn">New Blog</button>
    </form>
</div>
<br>
 
<%  AllBlogs.forEach((post, index) => {  %>
<a href="/home/blog/<%- post._id %>" class="blog-link" >
    <% if(index % 2 !== 0) { %>
        <div class="product">
            <div class="info">
            <h2><%- post.title %></h2>
            <p><%- post.content %></p>
            </div>
            <div class="image"><img src="<%-post.image%>" alt=""></div>
        </div>
        <br><br>
    <% }else { %>
        <div class="product">
            <div class="image"><img src="<%- post.image%>" alt=""></div>
            <div class="info">
            <h2><%- post.title %></h2>
            <p><%- post.content %></p>
            </div>
        </div>
        <br><br>

    <% } %>  
</a>  
<% }) %>
</div>  
</div>



